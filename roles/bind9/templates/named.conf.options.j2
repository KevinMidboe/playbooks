acl trustedclients {
  10.0.0.0/24;
  10.0.7.0/24;
  10.0.10.0/24;
  localhost;
  localnets;
};

options {
  directory "/var/cache/bind";
  forwarders {
    1.1.1.1;
    1.1.0.0;
  };

  allow-recursion { trustedclients; };
  allow-query { trustedclients; };
  allow-update { none; };

  dnssec-validation auto;

  auth-nxdomain no;    # conform to RFC1035
  listen-on-v6 { any; };

  // hide version number.
  version none;
};
