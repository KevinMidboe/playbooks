[Unit]
Description=Minecraft Server
After=network.target

[Service]
User=minecraft
Nice=1
KillMode=none
SuccessExitStatus=0 1
ProtectHome=true
ProtectSystem=full
PrivateDevices=true
NoNewPrivileges=true
WorkingDirectory=/opt/minecraft/server
ExecStart=/usr/bin/java -Xms{{ memory_allocation_initial }} -Xmx{{ memory_allocation_max }} -jar server.jar nogui
ExecStop=/opt/minecraft/tools/mcrcon-wrapper.sh stop

[Install]
WantedBy=multi-user.target
