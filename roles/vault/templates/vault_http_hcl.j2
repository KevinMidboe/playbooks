ui = true

#mlock = true
disable_mlock = true

storage "raft" {
  path    = "/etc/vault.d/vault/data"
  node_id = "node1"
}

# HTTP listener
listener "tcp" {
  address = "0.0.0.0:8200"
  tls_disable = 1
}

